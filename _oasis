BuildTools:ocamlbuild
Plugins: DevFiles (0.2), META (0.2)
Synopsis: A Spotify client library
Description:
  mlspot is a Spotify client library written in OCaml. It allow to
  access spotify services.

# +-------------------------------------------------------------------+
# | The library                                                       |
# +-------------------------------------------------------------------+

Library mlspot
  Path: src
  Install: true
  Modules: Spotify
  CSources: dns_stubs.c, shn.h, shn.c, shn_stubs.c, z_stubs.c
  if !os_type(Win32)
    CCLib: -lresolv -lz
  else
    CCLib: -lz
  BuildDepends: lwt.unix, lwt.syntax, lwt.syntax.log, cryptokit, expat
  XMETARequires: lwt.unix, cryptokit, expat
  XMETADescription: Spotify client library

Library "pa_xml"
  Install: false
  Path: syntax
  Modules: Pa_xml
  BuildDepends: camlp4.lib, camlp4.quotations.o, camlp4.extend

